.calendar {
  position: relative;
  display: inline-block;
  box-shadow: rgba(0, 0, 0, 0.05) 0px 2px 6px, rgba(0, 0, 0, 0.07) 0px 0px 0px 1px;
  border-radius: 3px;
  padding: 10px 5px;
}

.left, .right {
  user-select: none;
  position: absolute;
  cursor: pointer;
  z-index: 1;
  border: 1px solid #e4e7e7;
  color: #757575;
  padding: 0 5px;
  background-color: white;
}

.left {
  left: 10px;
  float: left;
}

.right {
  right: 10px;
  float: right;
}
